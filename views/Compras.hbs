<header>
  <nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/"><img src="/imagenes/delimar.png" class="logo-brand" alt="logo"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <ion-icon name="menu-outline"></ion-icon>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/" id="inicio">Inicio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/lista_producto" id="catalogo">Productos</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

{{!-- Mostrar los emensajes en caso de que existan --}}
{{#if errors}}
  {{#each errors}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container">

  <div class="row">
    {{#if productos}}
      {{#each productos}}
        <div class="col-xs-18 col-sm-6 col-md-3">
          <div class="thumbnail">
            <img src={{dataValues.imagepath}} class="card-img-top" alt="{{dataValues.name}}">
            <div class="caption">
              <h4>{{dataValues.name}}</h4>
              <p>{{dataValues.description}}</p>
              <div class="clearfix">
                <p><a href="/create" class="btn btn-info btn-xs" role="button">Comprar</a> <a href="#" class="btn btn-default btn-xs" role="button">Ver Mas</a></p>
              </div>
            </div>
          </div>
        </div>


      {{/each}}
    {{/if}}

  </div>
</div>
