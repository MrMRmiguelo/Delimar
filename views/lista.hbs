<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Productos</h1>
  <p class="lead">Listado de los productos premium registrados</p>
</div>

{{!-- Mostrar los emensajes en caso de que existan --}}
{{#if messages}}
  {{#each messages}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

{{!-- Mostrar los productos que hay en existencia --}}
{{#if productosInv}}
  {{#each productosInv}}
    <div class="card">
      <div class="card-header">
      {{productosInv.name}}
      </div>
      <div class="card-body">
        {{!--<h5 class="card-title"></h5>--}}
        <p class="card-text">Esta es la descripcion del producto</p>
        <a href="#" class="btn btn-primary">Ver producto</a>
      </div>
    </div>
  {{/each}}
{{/if}}
