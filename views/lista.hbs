<header>
  <nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/"><img src="/imagenes/delimar.png" class="logo-brand" alt="logo"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <ion-icon name="menu-outline"></ion-icon>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/" id="inicio">Inicio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/lista_producto" id="catalogo">Productos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="info">Nosotros</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" id="contacto">Contactanos</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center" style="padding: 100px 0;">
  <h1 class="display-4">Productos</h1>
  <p class="lead">Listado de los productos premium registrados</p>
</div>

{{!-- Mostrar los emensajes en caso de que existan --}}
{{#if errors}}
  {{#each errors}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container">
  <div class="row">
    {{!-- Mostrar los productos que hay en existencia --}}
    {{#if productos}}
      {{#each productos}}
        <div class="card" style="width: 18rem;">
          <img src={{dataValues.imagepath}} class="card-img-top" alt="{{dataValues.name}}">
          <div class="card-body">
            <h5 class="card-title">{{dataValues.name}}</h5>
            <p class="card-text">{{dataValues.description}}</p>
            <a href="#" class="btn btn-primary">Comprar</a><br><br>
            <a type="button" class="btn btn-success">Modificar</a><br><br>
            <button id="eliminar_producto" data-producto-url={{dataValues.url}} type="button" class="btn btn-danger">Eliminar</button>
          </div>
        </div>
        <!-- <div class="card mb-3 shadow-sm" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title">{{dataValues.name}}</h5>
                <p class="card-text">{{dataValues.description}}</p>
                <a href="#" class="btn btn-primary">Comprar</a>
              </div>
            </div> -->
      {{/each}}
    {{/if}}
  </div>
</div>
