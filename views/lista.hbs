<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Productos</h1>
  <p class="lead">Listado de los productos premium registrados</p>
</div>

{{!-- Mostrar los mensajes en caso de existir --}}
{{#if mensajes}}
  {{#each mensajes}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<div class="container">
  <div class="d-flex flex-row-reverse">
    <a href="/agregar_producto" class="btn btn-success btn-lg mb-2">Nuevo producto</a>
  </div>
  <div class="card-deck mb-3 text-center">
    {{!-- Mostrar los proyectos (si existen) --}}
    {{#if proyectos}}
        {{#each proyectos}}
            <div class="card mb-4 shadow-sm">
              <div class="card-header">
                <a class="font-weight-normal" href="/productmodel/{{dataValues.url}}">{{dataValues.nombre}}</a>
              </div>
              <div class="card-body">
                  <h5 class="card-title">{{dataValues.descripcion}}</h5>
                  <p class="card-text">{{dataValues.fecha}}</p>
                  <a href="/actualizar_proyecto/{{dataValues.url}}" class="btn btn-primary btn-lg">Actualizar</a>
                  <button name="eliminar-proyecto" data-proyecto-url={{dataValues.url}} type="button" class="btn btn-danger btn-lg">Eliminar</button>
              </div>
            </div>
        {{/each}}
    {{else}}
      <h4>Aún no tienes ningún proyecto. ¡Anímate a crear uno!</h4>
    {{/if}}
  </div>
</div>