<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center" style="padding: 100px 0;">
  <h1 class="display-4">{{dataValues.name}}</h1>
</div>

{{!-- Mostrar los mensajes en caso de que existan --}}
{{#if errors}}
  {{#each errors}}
    <div class="alert {{type}}" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{dataValues.imagepath}}" class="card-img" alt="{{dataValues.name}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{dataValues.name}}</h5>
        <p class="card-text">{{dataValues.description}}</p>
        <p class="card-text"><small class="text-muted">${{dataValues.price}}</small></p>
        <p class="card-text"><small class="text-muted">Existencias: {{dataValues.libra}} libra(s)</small></p>
      </div>
    </div>
  </div>
</div>
